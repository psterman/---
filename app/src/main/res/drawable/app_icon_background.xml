<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- The solid color is removed to make the background transparent -->
    <!-- <solid android:color="@android:color/white" /> -->

    <!-- Add a stroke to simulate a glow effect.
         A wider stroke with a semi-transparent color creates a soft glow. -->
    <stroke
        android:width="2dp"
        android:color="#44FFFFFF" /> <!-- White with ~27% opacity -->

    <size
        android:width="48dp"
        android:height="48dp" />
</shape> 