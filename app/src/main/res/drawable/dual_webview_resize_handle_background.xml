<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景色 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/dual_webview_top_bar_light" />
            <corners android:bottomLeftRadius="16dp" android:bottomRightRadius="16dp"/>
        </shape>
    </item>
    <!-- 中间的把手线 -->
    <item android:gravity="center_horizontal|center_vertical">
        <shape android:shape="rectangle">
            <size android:width="40dp" android:height="4dp"/>
            <solid android:color="@color/dual_webview_text_hint" />
            <corners android:radius="2dp"/>
        </shape>
    </item>
</layer-list> 