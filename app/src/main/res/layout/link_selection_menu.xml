<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/link_selection_menu_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/custom_text_menu_background"
    android:paddingVertical="8dp">

    <TextView
        android:id="@+id/action_open_in_new_window"
        style="@style/TextSelectionMenuItem"
        android:text="新窗口打开" />

    <TextView
        android:id="@+id/action_open_in_background"
        style="@style/TextSelectionMenuItem"
        android:text="后台打开" />

    <TextView
        android:id="@+id/action_copy_link"
        style="@style/TextSelectionMenuItem"
        android:text="复制链接" />

</LinearLayout> 