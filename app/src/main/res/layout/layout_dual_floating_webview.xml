<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- 顶部工具栏 -->
    <LinearLayout
        android:id="@+id/top_control_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/colorPrimary">

        <EditText
            android:id="@+id/dual_search_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="输入搜索内容"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="#80FFFFFF"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/btn_save_engines"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_save"
            android:background="@android:color/transparent"
            android:tint="@android:color/white"
            android:contentDescription="保存搜索引擎"/>

        <ImageButton
            android:id="@+id/btn_switch_normal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:src="@drawable/ic_switch_mode"
            android:background="@drawable/circle_ripple"
            android:contentDescription="切换到普通模式"
            android:padding="8dp" />

        <ImageButton
            android:id="@+id/btn_toggle_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_floating_mode"
            android:background="@android:color/transparent"
            android:tint="@android:color/white"
            android:contentDescription="切换布局"/>

        <ImageButton
            android:id="@+id/btn_single_window"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_single_window"
            android:background="@android:color/transparent"
            android:contentDescription="单窗口模式"/>

        <!-- 窗口数量切换控件 - 包含按钮和文本 -->
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp">
            
            <ImageButton
                android:id="@+id/btn_window_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_layers"
                android:background="@android:color/transparent"
                android:contentDescription="窗口数量切换"/>
                
            <TextView
                android:id="@+id/window_count_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:background="#55000000"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="2"/>
        </FrameLayout>

        <ImageButton
            android:id="@+id/btn_dual_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_close"
            android:background="@android:color/transparent"
            android:contentDescription="关闭"/>
    </LinearLayout>

    <!-- 内容容器 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
        <!-- 添加HorizontalScrollView -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="horizontal"
            android:scrollbarStyle="insideOverlay"
            android:scrollbarSize="6dp"
            android:fadeScrollbars="false"
            android:smoothScrollbar="true"
            android:paddingBottom="6dp">

            <!-- 三WebView容器 -->
            <LinearLayout
                android:id="@+id/dual_webview_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!-- 第一个WebView容器 -->
                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/first_title_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/colorPrimaryDark">

                        <TextView
                            android:id="@+id/first_floating_title"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:padding="0dp"
                            android:textColor="@android:color/white"
                            android:text="搜索"
                            android:visibility="gone"
                            android:gravity="center"/>

                        <!-- AI 搜索引擎图标行 -->
                        <HorizontalScrollView
                            android:id="@+id/first_webview_ai_engine_scroll_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none"
                            android:paddingVertical="0dp">
                            <LinearLayout
                                android:id="@+id/first_webview_ai_engine_container"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingHorizontal="4dp"
                                android:gravity="center_vertical"/>
                        </HorizontalScrollView>

                        <!-- 标准搜索引擎图标行 -->
                        <HorizontalScrollView
                            android:id="@+id/first_webview_standard_engine_scroll_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none"
                            android:paddingVertical="0dp">
                            <LinearLayout
                                android:id="@+id/first_webview_standard_engine_container"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingHorizontal="4dp"
                                android:gravity="center_vertical"/>
                        </HorizontalScrollView>
                    </LinearLayout>

                    <com.example.aifloatingball.ui.webview.CustomWebView
                        android:id="@+id/first_floating_webview"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="2dp"/>
                </LinearLayout>

                <!-- 第二个WebView容器 -->
                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="4dp">

                    <LinearLayout
                        android:id="@+id/second_title_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/colorPrimaryDark">

                        <TextView
                            android:id="@+id/second_floating_title"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:padding="0dp"
                            android:textColor="@android:color/white"
                            android:text="搜索"
                            android:visibility="gone"
                            android:gravity="center"/>

                        <!-- AI 搜索引擎图标行 -->
                        <HorizontalScrollView
                            android:id="@+id/second_webview_ai_engine_scroll_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none"
                            android:paddingVertical="0dp">
                            <LinearLayout
                                android:id="@+id/second_webview_ai_engine_container"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingHorizontal="4dp"
                                android:gravity="center_vertical"/>
                        </HorizontalScrollView>

                        <!-- 标准搜索引擎图标行 -->
                        <HorizontalScrollView
                            android:id="@+id/second_webview_standard_engine_scroll_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none"
                            android:paddingVertical="0dp">
                            <LinearLayout
                                android:id="@+id/second_webview_standard_engine_container"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingHorizontal="4dp"
                                android:gravity="center_vertical"/>
                        </HorizontalScrollView>
                    </LinearLayout>

                    <com.example.aifloatingball.ui.webview.CustomWebView
                        android:id="@+id/second_floating_webview"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"/>
                </LinearLayout>

                <!-- 第三个WebView容器 -->
                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="4dp">

                    <LinearLayout
                        android:id="@+id/third_title_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/colorPrimaryDark">

                        <TextView
                            android:id="@+id/third_floating_title"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:padding="0dp"
                            android:textColor="@android:color/white"
                            android:text="搜索"
                            android:visibility="gone"
                            android:gravity="center"/>

                        <!-- AI 搜索引擎图标行 -->
                        <HorizontalScrollView
                            android:id="@+id/third_webview_ai_engine_scroll_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none"
                            android:paddingVertical="0dp">
                            <LinearLayout
                                android:id="@+id/third_webview_ai_engine_container"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingHorizontal="4dp"
                                android:gravity="center_vertical"/>
                        </HorizontalScrollView>

                        <!-- 标准搜索引擎图标行 -->
                        <HorizontalScrollView
                            android:id="@+id/third_webview_standard_engine_scroll_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none"
                            android:paddingVertical="0dp">
                            <LinearLayout
                                android:id="@+id/third_webview_standard_engine_container"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingHorizontal="4dp"
                                android:gravity="center_vertical"/>
                        </HorizontalScrollView>
                    </LinearLayout>

                    <com.example.aifloatingball.ui.webview.CustomWebView
                        android:id="@+id/third_floating_webview"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:id="@+id/dual_resize_handle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom|end"
            android:background="#80FFFFFF"/>
    </FrameLayout>
</LinearLayout> 
</androidx.cardview.widget.CardView> 