<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    app:cardBackgroundColor="#1C1C1E"
    app:cardCornerRadius="28dp"
    app:cardElevation="8dp"
    app:strokeWidth="0dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dynamic_island_config_panel_background"
        android:padding="16dp">

        <!-- Input Area -->
        <LinearLayout
            android:id="@+id/input_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/search_input_background_white"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:elevation="4dp">

            <EditText
                android:id="@+id/search_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="输入搜索内容或指令..."
                android:textColor="@android:color/black"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:imeOptions="actionSearch"
                android:inputType="textMultiLine"
                android:maxLines="5" />

            <ImageView
                android:id="@+id/search_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_send_plane"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:layout_marginStart="8dp"
                android:alpha="0.5"/>
        </LinearLayout>

        <!-- Slot Container -->
        <LinearLayout
            android:id="@+id/slots_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_area"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <include
                android:id="@+id/slot_1"
                layout="@layout/config_slot_item"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"/>

            <include
                android:id="@+id/slot_2"
                layout="@layout/config_slot_item"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"/>

            <include
                android:id="@+id/slot_3"
                layout="@layout/config_slot_item"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <!-- "Add Prompt" Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_master_prompt"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/slots_container"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:text="+ 加提示词"
            android:textColor="?attr/colorPrimary"
            app:icon="@drawable/ic_magic_wand"
            app:iconTint="?attr/colorPrimary" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView> 