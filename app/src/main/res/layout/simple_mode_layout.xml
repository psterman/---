                android:textSize="10sp"
                android:textColor="#666666" />
        </LinearLayout>
    </LinearLayout>

    <!-- 隐藏的关闭按钮 -->
    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</LinearLayout> 