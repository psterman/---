<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/minimized_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/minimized_background"
    android:paddingHorizontal="3dp"
    android:paddingVertical="8dp">

    <!-- 应用图标（缩小） -->
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginBottom="6dp" />

    <!-- 拖动提示点 -->
    <View
        android:layout_width="3dp"
        android:layout_height="3dp"
        android:background="@drawable/minimized_dot"
        android:layout_marginBottom="2dp" />
        
    <View
        android:layout_width="3dp"
        android:layout_height="3dp"
        android:background="@drawable/minimized_dot_semi"
        android:layout_marginBottom="2dp" />
        
    <View
        android:layout_width="3dp"
        android:layout_height="3dp"
        android:background="@drawable/minimized_dot_light" />

</LinearLayout> 