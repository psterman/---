<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popup_menu_background"
    android:padding="8dp"
    android:elevation="8dp">

    <!-- 后台打开 -->
    <LinearLayout
        android:id="@+id/btn_open_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_open_background"
            android:tint="#555555"
            android:contentDescription="后台打开" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="后台打开"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE" />

    <!-- 新标签打开 -->
    <LinearLayout
        android:id="@+id/btn_open_new_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_open_new"
            android:tint="#555555"
            android:contentDescription="新标签打开" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新标签打开"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE" />

    <!-- 拷贝链接文字 -->
    <LinearLayout
        android:id="@+id/btn_copy_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_copy_text"
            android:tint="#555555"
            android:contentDescription="拷贝链接文字" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拷贝链接文字"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE" />

    <!-- 拷贝链接 -->
    <LinearLayout
        android:id="@+id/btn_copy_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_copy_link"
            android:tint="#555555"
            android:contentDescription="拷贝链接" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拷贝链接"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE" />

    <!-- 分享链接 -->
    <LinearLayout
        android:id="@+id/btn_share_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_share"
            android:tint="#555555"
            android:contentDescription="分享链接" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享链接"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE" />

    <!-- 生成二维码 -->
    <LinearLayout
        android:id="@+id/btn_generate_qr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_qr_code"
            android:tint="#555555"
            android:contentDescription="生成二维码" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生成二维码"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginStart="12dp" />
    </LinearLayout>
</LinearLayout> 