<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/voice_wave_background"
    android:padding="16dp">

    <!-- 动画容器 -->
    <FrameLayout
        android:id="@+id/animationContainer"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/voiceWaveImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/voice_wave_animation" />

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/voiceProgressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            app:indicatorColor="#FFFFFF"
            app:indicatorSize="140dp"
            app:trackColor="#20FFFFFF"
            app:trackCornerRadius="4dp"
            app:trackThickness="2dp" />
    </FrameLayout>

    <!-- 语音输入状态提示 -->
    <TextView
        android:id="@+id/voiceHintTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="正在聆听..."
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animationContainer" />

    <TextView
        android:id="@+id/voiceStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="请说话..."
        android:textColor="#CCFFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/voiceHintTextView" />

    <!-- 语音输入结果显示 -->
    <TextView
        android:id="@+id/recognitionResultText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/voiceStatusTextView" />

    <!-- 操作按钮容器 -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/recognitionResultText"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 重试按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/retryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="重试"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4DFFFFFF"
            app:cornerRadius="20dp" />

        <!-- 确认按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            app:cornerRadius="20dp" />
    </LinearLayout>

    <!-- 语音输入控制按钮 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/voiceControlButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/mic_state_selector"
        app:backgroundTint="#4CAF50"
        app:tint="#FFFFFF"
        app:fabSize="normal"
        app:layout_constraintTop_toBottomOf="@+id/buttonContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 