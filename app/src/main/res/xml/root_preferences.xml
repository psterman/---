<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="基本设置"
        app:iconSpaceReserved="false">

        <ListPreference
            android:defaultValue="home"
            android:key="default_page"
            android:title="默认页面"
            android:summary="选择应用启动时显示的页面"
            android:entries="@array/default_page_entries"
            android:entryValues="@array/default_page_values"
            app:iconSpaceReserved="false" />

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="clipboard_listener"
            android:title="剪贴板监听"
            android:summary="检测到网址时自动弹出提示"
            app:iconSpaceReserved="false" />

        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="left_handed_mode"
            android:title="左手模式"
            android:summary="将菜单按钮移到右侧"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="搜索设置"
        app:iconSpaceReserved="false">

        <ListPreference
            android:defaultValue="baidu"
            android:key="default_search_engine"
            android:title="默认搜索引擎"
            android:summary="选择默认使用的搜索引擎"
            android:entries="@array/search_engine_entries"
            android:entryValues="@array/search_engine_values"
            app:iconSpaceReserved="false" />

        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="default_search_mode"
            android:title="AI模式"
            android:summary="默认使用AI搜索引擎"
            app:iconSpaceReserved="false" />

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="auto_paste"
            android:title="自动粘贴"
            android:summary="打开搜索页面时自动粘贴剪贴板内容"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="显示设置"
        app:iconSpaceReserved="false">

        <SeekBarPreference
            android:defaultValue="100"
            android:key="ball_size"
            android:title="悬浮球大小"
            android:summary="调整悬浮球的显示大小"
            android:max="200"
            android:min="50"
            app:showSeekBarValue="true"
            app:iconSpaceReserved="false" />

        <ListPreference
            android:defaultValue="0"
            android:key="layout_theme"
            android:title="主题风格"
            android:summary="选择应用的主题风格"
            android:entries="@array/theme_entries"
            android:entryValues="@array/theme_values"
            app:iconSpaceReserved="false" />

        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="dark_mode"
            android:title="深色模式"
            android:summary="启用深色主题"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="其他设置"
        app:iconSpaceReserved="false">

        <Preference
            android:key="menu_manager"
            android:title="菜单管理"
            android:summary="自定义菜单项目和顺序"
            app:iconSpaceReserved="false" />

        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="privacy_mode"
            android:title="隐私模式"
            android:summary="不保存浏览记录和搜索历史"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="about"
            android:title="关于"
            android:summary="版本信息和开源协议"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>

</PreferenceScreen>