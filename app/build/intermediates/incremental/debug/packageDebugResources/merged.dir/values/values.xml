<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="accent">#8BC34A</color>
    <color name="black">#000000</color>
    <color name="divider">#BDBDBD</color>
    <color name="ic_launcher_background">#3DDC84</color>
    <color name="primary">#4CAF50</color>
    <color name="primary_dark">#388E3C</color>
    <color name="primary_text">#212121</color>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="secondary_text">#757575</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="transparent_black">#80000000</color>
    <color name="white">#FFFFFF</color>
    <string name="app_name">AI悬浮球</string>
    <string name="auto_hide">自动隐藏悬浮球</string>
    <string name="floating_ball_description">AI悬浮球图标</string>
    <string name="permission_required">需要权限</string>
    <string name="save">保存</string>
    <string name="search">搜索</string>
    <string name="search_hint">输入搜索内容</string>
    <string name="settings">设置</string>
    <string name="voice_recognition_failed">语音识别失败，请重试</string>
    <string name="voice_search">语音搜索</string>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:divider">@color/divider</item>
    </style>
    <style name="SettingsItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="SettingsTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:listDivider">@color/divider</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Theme.AIFloatingBall" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>
    <style name="TransparentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
</resources>